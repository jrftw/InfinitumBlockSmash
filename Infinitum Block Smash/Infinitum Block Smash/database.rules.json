{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        "username": {
          ".validate": "newData.isString() && newData.val().length >= 3 && newData.val().length <= 20"
        },
        "settings": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid"
        },
        "progress": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid",
          "score": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          "level": {
            ".validate": "newData.isNumber() && newData.val() >= 1"
          },
          "blocksPlaced": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          "linesCleared": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          "gamesCompleted": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          "perfectLevels": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          "totalPlayTime": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          "highScore": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          "highestLevel": {
            ".validate": "newData.isNumber() && newData.val() >= 1"
          }
        }
      }
    },
    "online_users": {
      ".read": true,
      "$uid": {
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.isBoolean()"
      }
    },
    "daily_stats": {
      ".read": true,
      "players_today": {
        ".write": "auth != null",
        ".validate": "newData.isNumber()"
      },
      "last_reset": {
        ".write": "auth != null",
        ".validate": "newData.isNumber()"
      }
    },
    "leaderboards": {
      ".read": "auth != null",
      "$leaderboardId": {
        ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)",
        "score": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        }
      }
    },
    "achievement_leaderboard": {
      "$timeframe": {
        "scores": {
          "$uid": {
            ".read": "auth != null",
            ".write": "auth != null && auth.uid === $uid",
            "score": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            }
          }
        }
      }
    },
    "settings": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
} 