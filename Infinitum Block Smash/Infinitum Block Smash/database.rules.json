rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ✅ Classic Leaderboard
    match /classic_leaderboard/{period}/scores/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // ✅ Timed Leaderboard
    match /classic_timed_leaderboard/{period}/scores/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // ✅ Achievement Leaderboard
    match /achievement_leaderboard/{period}/scores/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // ✅ Users & Subcollections
    match /users/{userId} {
      // Allow reading the collection for counting purposes
      allow list: if true;
      // Allow reading individual documents only to owners
      allow get: if isOwner(userId);
      // Allow writing only to owners
      allow write: if isOwner(userId);

      match /achievements/{achievementId} {
        allow read, write: if isOwner(userId);
      }

      match /progress/{progressId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ✅ Game states
    match /game_states/{userId} {
      allow read, write: if isOwner(userId);
    }

    // ✅ Settings
    match /settings/{userId} {
      allow read, write: if isOwner(userId);
    }

    // ✅ Devices
    match /devices/{deviceId} {
      allow read, write: if isAuthenticated();
    }

    // ❌ Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 