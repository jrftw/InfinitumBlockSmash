rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Basic authentication check
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Ownership check for user-specific writes
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // App Check verification - attempt but allow if fails
    function hasValidAppCheck() {
      return request.auth.token.app_check.exists() ? request.auth.token.app_check == true : true;
    }

    // Leaderboards - public read, authenticated write
    match /classic_leaderboard/{period}/scores/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    match /classic_timed_leaderboard/{period}/scores/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    match /achievement_leaderboard/{period}/scores/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // User profiles - authenticated read, owner write
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Game states - authenticated read, owner write
    match /game_states/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Settings - authenticated read, owner write
    match /settings/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Devices collection - for referral tracking
    match /devices/{deviceId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Default deny for all unknown paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 