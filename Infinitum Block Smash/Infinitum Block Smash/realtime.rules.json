{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        "username": {
          ".validate": "newData.isString() && newData.val().length >= 2 && newData.val().length <= 30"
        },
        "settings": {
          ".read": "auth.uid === $uid",
          ".write": "auth.uid === $uid"
        },
        "progress": {
          ".read": "auth.uid === $uid",
          ".write": "auth.uid === $uid",
          "score": { ".validate": "newData.isNumber() && newData.val() >= 0" },
          "level": { ".validate": "newData.isNumber() && newData.val() >= 1" },
          "blocksPlaced": { ".validate": "newData.isNumber()" },
          "linesCleared": { ".validate": "newData.isNumber()" },
          "gamesCompleted": { ".validate": "newData.isNumber()" },
          "perfectLevels": { ".validate": "newData.isNumber()" },
          "totalPlayTime": { ".validate": "newData.isNumber()" },
          "highScore": { ".validate": "newData.isNumber()" },
          "highestLevel": { ".validate": "newData.isNumber()" },
          "lastSaveTime": { ".validate": "newData.isNumber()" }
        },
        "achievements": {
          ".read": "auth.uid === $uid",
          ".write": "auth.uid === $uid"
        }
      },
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["lastLogin", "lastActive"]
    },
    "game_states": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid",
        "score": { ".validate": "newData.isNumber() && newData.val() >= 0" },
        "level": { ".validate": "newData.isNumber() && newData.val() >= 1" },
        "grid": { ".validate": "newData.exists()" },
        "tray": { ".validate": "newData.exists()" },
        "lastUpdate": { ".validate": "newData.isNumber()" },
        "lastSaveTime": { ".validate": "newData.isNumber()" }
      },
      ".indexOn": ["lastSaveTime", "lastUpdate"]
    },
    "online_users": {
      ".read": true,
      "$uid": {
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.isBoolean()"
      }
    },
    "daily_stats": {
      ".read": true,
      "players_today": {
        ".write": "auth != null",
        ".validate": "newData.isNumber()"
      },
      "last_reset": {
        ".write": "auth != null",
        ".validate": "newData.isNumber()"
      }
    },
    "leaderboards": {
      "$type": {
        "$period": {
          "scores": {
            "$uid": {
              ".read": true,
              ".write": "auth != null && auth.uid === $uid",
              ".validate": "newData.hasChildren(['score', 'timestamp'])",
              "score": { ".validate": "newData.isNumber() && newData.val() >= 0" },
              "timestamp": { ".validate": "newData.isNumber()" },
              "username": { ".validate": "newData.isString()" },
              "userId": { ".validate": "newData.isString() && newData.val() === auth.uid" }
            }
          },
          ".indexOn": ["score", "timestamp"]
        }
      }
    },
    "settings": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    }
  }
} 